<div class="page-header">
  <h3>Sign Up #<%= @sign_up.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Tourist</dt>
      <dd>
        <% if @sign_up.tourist.present? %>
          <a href="/users/<%= @sign_up.tourist_id %>">
            <%= @sign_up.tourist.email %>
          </a>
        <% end %>
      </dd>

      <dt>Event</dt>
      <dd>
        <% if @sign_up.event.present? %>
          <a href="/local_events/<%= @sign_up.event_id %>">
            <%= @sign_up.event.event_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/sign_ups" class="btn btn-primary">
        Back
      </a>
      <a href="/sign_ups/<%= @sign_up.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_sign_up/<%= @sign_up.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
