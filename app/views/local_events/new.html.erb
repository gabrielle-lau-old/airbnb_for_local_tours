<!-- Validation failure messages -->
<% if @local_event.errors.any? %>
  <% @local_event.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Local Event</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_local_event" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for event_name -->
      <div class="form-group">
        <label for="event_name" class="control-label">
          Event name
        </label>

        <input type="text" id="event_name" name="event_name" placeholder="Event name" class="form-control" value="<%= @local_event.event_name %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @local_event.date %>">
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @local_event.city %>">
      </div>

      <!-- Label and input for host_id -->
      <div class="form-group">
        <label for="host_id" class="control-label">
          Host
        </label>

        <input type="text" id="host_id" name="host_id" placeholder="Host" class="form-control" value="<%= @local_event.host_id %>">
      </div>

      <button class="btn btn-success">
        Create Local Event
      </button>
      or
      <a href="/local_events">Cancel</a>
    </form>
  </div>
</div>
