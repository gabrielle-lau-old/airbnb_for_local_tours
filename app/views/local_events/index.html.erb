<div class="page-header">
  <h1>
    Local events
    <a href="/local_events/new" class="btn btn-lg btn-success">New Local event</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event name</th>
        <th>Date</th>
        <th>City</th>
        <th>Host</th>
        <th>Actions</th>
      </tr>

      <% @local_events.each do |local_event| %>
      <tr>
        <td><%= local_event.event_name %></td>
        <td><%= local_event.date %></td>
        <td><%= local_event.city %></td>
        <td><%= local_event.host.email %></td>
        <td>
          <a href="/local_events/<%= local_event.id %>" class="btn btn-primary">Show</a>
          <a href="/local_events/<%= local_event.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_local_event/<%= local_event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
